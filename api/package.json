{
  "name": "beach-forecast",
  "version": "1.0.0",
  "description": "This is an api that provides beach predictions. You can register your favorite beaches and receive forecasts for each one. And the coolest thing, the api has an algorithm that uses the predictions of each beach to make an evaluation, that way you can know the best beach to go surfing at the moment!",
  "main": "./src/main.ts",
  "scripts": {
    "start:dev": "tsnd -r tsconfig-paths/register -r dotenv/config --inspect --respawn --transpile-only --ignore-watch node_modules --no-notify ./src/main.ts",
    "test:unit": "vitest -c ./vitest.config.ts",
    "test:coverage": "vitest -c ./vitest.config.ts --coverage",
    "lint": "eslint ./src ./tests --ext .ts",
    "lint:fix": "eslint ./src ./tests --ext .ts --fix",
    "style": "prettier --write *.ts",
    "build": "swc ./src -d ./dist --ignore .spec.ts$ --copy-files --include-dotfiles",
    "clean": "rm -rf dist",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "prepare": "cd .. && husky install ./api/.husky"
  },
  "engines": {
    "node": "18.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Suares01/Beach-Forecast"
  },
  "author": "Lucas Suares",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Suares01/Beach-Forecast/issues"
  },
  "homepage": "https://github.com/Suares01/Beach-Forecast.git",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.194",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.8",
    "@types/nodemailer": "^6.4.6",
    "@types/nodemailer-express-handlebars": "^4.0.2",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@vitest/coverage-c8": "^0.24.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.5.1",
    "prisma": "^4.4.0",
    "supertest": "^6.1.6",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4",
    "vitest": "^0.24.1"
  },
  "dependencies": {
    "@prisma/client": "^4.4.0",
    "axios": "^0.24.0",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "config": "^3.3.8",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.2.1",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.0.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "nodemailer-express-handlebars": "^5.0.0",
    "pm2": "^5.2.2",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.3.0",
    "tsyringe": "^4.6.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run style"
    ]
  }
}
